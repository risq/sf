{% extends '::base.html.twig' %}

{% block title %}
Liste des Produit
{% endblock %}

{% block page_title %}
Liste des Produit
{% endblock %}

{% block page_subtitle %}{% endblock %}

{% block body -%}
    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Poids</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Quantite</th>
                <th>Img</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('produit_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.poids }}</td>
                <td>{{ entity.prix }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.quantite }}</td>
                <td>{{ entity.image.image }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('produit_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('produit_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('produit_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
