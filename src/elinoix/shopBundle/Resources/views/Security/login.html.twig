{% extends '::base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}


{% block title %}Connexion{% endblock %}
{% block page_title %}Connexion Ã  une organisation{% endblock %} 

{% block fos_user_content %}
    <div class="row">
        <div class="col-xs-12">
            <h2 class="text-center">Authentification</h2>
        </div>
        {% if error %}
            <div class="col-xs-12 text-center">{{ error|trans }}</div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-3">
            <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                <div class="form-group">
                    <input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                </div>
                <div class="form-group">
                    <label for="username">Organisation :</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <input class="form-control" type="password" id="password" name="_password" required="required" />
                </div>
                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">Se souvenir de moi</label>
                </div>
                <div class="form-group">
                </div>
                <input class="btn btn-danger btn-xl" type="submit" id="_submit" name="_submit" value="Connexion" />
            </form>
        </div>
        <div class="col-xs-12 col-md-4  col-md-push-4">
            <h4>Enregistrer un nouvel utilisateur :</h4>
            <br>
            <br>
            <a class="btn btn-danger btn-xl" href="{{path('fos_user_registration_register')}}">S'enregistrer</a>
        </div>
    </div>
{% endblock %}